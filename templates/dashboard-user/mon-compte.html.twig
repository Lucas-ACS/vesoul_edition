                <div class="title-wrapper">
                    <div class="title-compte">
                        <h2>Mes informations</h2>
                    </div>
                </div>

                <div class="infos-content">

                {{ form_start(form) }}

                    <div class="d-flex flex-column">

                        <div class="d-flex justify-content-between">

                            {{ form_widget(form.username, {'label' : false ,'attr' : {'class': 'col-5 form-control mb-4', 'placeholder' : 'Adresse mail', 'id' : 'inputUser'}}) }}

                            {{ form_widget(form.tel, {'label' : false ,'attr' : {'class': 'col-5 form-control mb-4', 'placeholder' : 'Téléphone', 'id' : 'inputPassword'}}) }}

                        </div>

                            {{ form_row(form.password, {'label' : false ,'attr' : {'class': 'form-control mb-3', 'placeholder' : 'Nouveau mot de passe', 'id' : 'inputPassword', 'value' : '', }}) }}

                            {{ form_row(form.confirm_password, {'label' : false ,'attr' : {'class': 'form-control mb-3', 'placeholder' : 'Confirmation nouveau mot de passe', 'id' : 'inputNew'}}) }}
                            
                            {# {{ form_row(form.confirm_new_password, {'label' : false ,'attr' : {'class': 'form-control mb-3', 'placeholder' : 'Confirmation du nouveau mot de passe', 'id' : 'inputNewConfirm'}}) }} #}
                            
                    </div>

                    <div class="d-flex justify-content-center align-items-end">

                        <button class="btn-inscription btn btn-lg mt-2 mt-3" type="submit">Enregistrer les modifications</button>
                            
