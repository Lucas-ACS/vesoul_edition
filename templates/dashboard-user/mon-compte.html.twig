{% extends "vesoul-edition/base.html.twig" %}


{% block content %}

    <div id="compte-page" class="pt-4 pb-4 d-flex">

        <nav id="menu-compte" class="col-3 align-items-start">
            <h2 class="text-center">Mon compte</h2>
            <ul>
                <a class="list active" href="{{ path('dashboard_user_informations' )}}">
                    <li>INFORMATIONS</li>
                </a>
                <a class="list" href="{{ path('dashboard_user_addresses')}}">
                    <li>ADRESSES</li>
                </a>
                <a class="list" href="{{ path('dashboard_user_commands')}}">
                    <li>COMMANDES</li>
                </a>
            </ul>
        </nav>

        <div id="infos-compte" class="col-9 d-flex justify-content-center">

            <div class="wrapper-infos d-flex flex-column ml-3 justify-content-center">

                <div class="d-flex flex-column">
                    <input type="email" placeholder="Adresse mail">
                    <div class="d-flex justify-content-between">
                        <input type="text" placeholder="Téléphone">
                    </div>

                    <hr>

                    <input class="changing-pass" type="password" placeholder="Mot de passe">
                    <input class="changing-pass" type="password" placeholder="Nouveau mot de passe">
                    <input class="changing-pass" type="password" placeholder="Confirmer le nouveau mot de passe">
                </div>
                <div class="d-flex justify-content-center align-items-end">
                    <button class="btn">Enregistrer les modifications</button>
                </div>

            </div>


        </div>

    </div>


{% endblock %}