<!doctype html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <title>Facture {{ commandNumero }}-IT</title>

    <style type="text/css">
        * {
            font-family: Verdana, Arial, sans-serif;
        }

        table {
            font-size: x-small;
        }

        tfoot tr td {
            font-weight: bold;
            font-size: x-small;
        }
        .gray{
            background-color: rgb(228, 228, 228);
        }

        .lightgray {
            background-color: lightgray;
        }
    </style>

</head>

<body>

    <table width="100%">
        <tr>
            <td valign="top"><h1><strong>Facture {{ commandNumero }}-IT</strong></h1></td>
            <td align="right">
                <h3>{{ boutiqueNom }}</h3>
                <pre>
                {{ boutiqueLibelleAdresse }}
                {{ boutiqueCp ~ boutiqueVille }}
                {{ boutiquePays }}
            </pre>
                <pre>
                {{ boutiqueTelephone }}
                {{ boutiqueEmail }}
            </pre>
            </td>
        </tr>

    </table>

    <br />

    <table width="100%">
        <tr>
            <td><strong>Adresse de facturation :</strong></td>
            <td><strong>Adresse de livraison :</strong></td>
        </tr>
        <tr>
            <td>
                <pre>
{{ afPrenom }} {{ afNom }}
{{ afNumero }} {{ afType }} {{ afRue }}{% if afComplement %}, {{ afComplement }}{% endif %},
{{ afVille }} {{ afCp }}, {{ afPays }}
                </pre>
            </td>
            <td>
                <pre>
{{ alPrenom }} {{ alNom }}
{{ alNumero }} {{ alType }} {{ alRue }}{% if alComplement %}, {{ alComplement }}{% endif %},
{{ alVille }} {{ alCp }}, {{ alPays }}
                </pre>
            </td>
        </tr>

    </table>

    <br/>
    <br/>
    <br/>

    <table width="100%">
        <thead class="lightgray">
            <tr>
                <th>ISBN</th>
                <th>Titre</th>
                <th>Quantité</th>
                <th>Prix unitaire €</th>
                <th>Total €</th>
            </tr>
        </thead>
        <tbody>
            {% for livre in livres %}
            <tr>
                {# ISBN #}
                <th scope="row">{{ livre[0] }}</th>
                {# Titre #}
                <td class="gray">{{ livre[1] }}</td>
                {# Quantité #}
                <td align="right"> {{ livre[2] }} </td>
                {# Prix individuel #}
                <td class="gray" align="right"> {{ livre[3] }} </td>
                {# Prix total du livre (prix * quantité) #}
                <td align="right">{{ livre[2] * livre[3] }}</td>
            </tr>
            {% endfor %}
        </tbody>

        <tfoot>
            <tr>
                <td colspan="3"></td>
                <td align="right">Total €</td>
                {# Prix total de la commande #}
                <td align="right" class="lightgray">{{ prixTotal }}</td>
            </tr>
        </tfoot>
    </table>

</body>

</html>