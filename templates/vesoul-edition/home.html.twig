{% extends 'vesoul-edition/base.html.twig' %}

{% block title %}VesoulEdition - Accueil{% endblock %}

{% block content %}
<section id="index">
    <div class="row p-3">
        {# Partie filtres ===================================== #}
        <div class="col-4 p-0 m-0" id="filters">
            <div class="row p-0 m-0">
                <div class="title col-12 d-flex justify-content-center align-items-center ">
                    <h2 class="m-0">Filtrer par</h2>
                </div>
            </div>
            <form action="">
                {# => Sous secton Auteur ------------- #}
                <div class="row p-0 m-0">
                    <div id="badges" class="col-12 p-2">
                        <a href="#" class="badge badge-light p-2 m-2">Auteur 1</a>
                        <a href="#" class="badge badge-light p-2 m-2">Genre 1</a>
                    </div>
                </div>
                {# => Fin Sous section Badges ----------- #}
                {# => Sous secton Auteur ------------- #}
                <div class="row p-0 m-0">
                    <div class="col-12 p-2">
                        <h3 class="pl-2">Auteur</h3>
                        <ul class="d-flex flex-column p-0 pl-3 m-0">
                            {% for author in authors %}
                            <div class="d-flex px-3 p-2">
                                <input type="checkbox" class="form-check-input" id="{{author.firstname}}-{{author.lastname}}">
                                <label class="form-check-label" for="{{author.firstname}}-{{author.lastname}}">{{author.firstname}} {{author.lastname}}</label>
                            </div>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
                {# => Fin Sous section Auteur ----------- #}
                {# => Sous secton Genre ------------- #}
                <div class="row p-0 m-0">
                    <div class="col-12 p-2">
                        <h3 class="pl-2">Genre</h3>
                        <ul class="d-flex flex-column p-0 pl-3 m-0">
                            {% for genra in genras %}
                            <div class="d-flex px-3 p-2">
                                <input type="checkbox" class="form-check-input" id="{{genra.name}}">
                                <label class="form-check-label" for="{{genra.name}}">{{genra.name}}</label>
                            </div>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
                {# => Fin Sous section genre ----------- #}
                {# => Sous secton Prix ------------- #}
                <div class="row p-0 m-0">
                    <div class="price col-12 p-2">
                        <h3 class="pl-2">Prix</h3>
                        <div id="price-slider">
                        </div>
                    </div>
                </div>
                <div class="row p-0 m-0">
                    <div class="col-12 d-flex justify-content-center align-items-center p-3">
                        <button type="submit" class="btn btn-info mb-2">Appliquer les filtres</button>
                    </div>
                </div>
                {# => Fin Sous section Prix ------------- #}
            </form>
        </div>
        {# Fin de la partie filtres ======================================= #}
        <div class="col-8">
            {# Partie trie ============================ #}
            <div class="row" id="sort">
                <div class="col-6 d-flex align-items-center">
                    <p class="m-0"><span>12</span> Livres trouvés</p>
                </div>
                <div class="col-6 d-flex justify-content-end align-items-center">
                    <label for="sort-select" class="m-0 p-2">Trier par : </label>
                    <select class="custom-select" name="sort-select" id="sort-select">
                        <option value="up-price">Prix croissant</option>
                        <option value="down-price">Prix décroissant</option>
                        <option value="up-name">Nom croissant</option>
                        <option value="down-name">Nom décroissant</option>
                    </select>
                </div>
            </div>
            {# Fin de la partie trie =============================== #}
            {# Partie Livres ============================== #}
            <div class="row">
                <div class="col-12 m-0 p-0 d-flex flex-wrap justify-content-center">
                    {# --- Génération de livre--- #}
                    {% for book in books %}
                        <div class="m-0 p-3">
                            <div class="book-card">
                                <div class="photo">
                                    <img class="book-pic" src="{{book.url}}" alt="image du livre">
                                    <div class="overlay d-flex justify-content-center  align-items-center">
                                        <a href="product/{{book.id}}"><button class="btn btn-info p-2">Details</button></a>
                                    </div>
                                </div>
                                <div class="info p-2 d-flex flex-column justify-content-between">
                                    <h3 class="m-0">{{book.title}}</h3>
                                    <p class="m-0">{{book.firstname}} {{book.lastname}}</p>
                                    <div class="row">
                                        <div class="col-4 d-flex align-items-center">
                                            <p class="m-0 pl-2" id="price"><span>{{book.price}}</span>€</p>
                                        </div>
                                        <div class="col-8 d-flex justify-content-end">
                                            <a href="{{ path('addItem',{ 'id':book.id }) }}"><button class="btn btn-info">Ajouter | <i class="fas fa-shopping-cart"></i></button></a>
                                            {#  #}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}