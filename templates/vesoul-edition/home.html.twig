{% extends 'vesoul-edition/base.html.twig' %}

{% block title %}VesoulEdition - Accueil{% endblock %}

{% block content %}
<section id="index">
    <div class="row p-3">
        <div class="col-4 p-0 m-0" id="filters">
            <div class="row p-0 m-0">
                <div class="title col-12 d-flex justify-content-center align-items-center ">
                    <h2 class="m-0">Filtrer par</h2>
                </div>
            </div>
            <form action="">
                <div class="row p-0 m-0">
                    <div id="badges" class="col-12 p-2">
                        <a href="#" class="badge badge-light p-2 m-2">Auteur 1</a>
                        <a href="#" class="badge badge-light p-2 m-2">Genre 1</a>
                    </div>
                </div>
                <div class="row p-0 m-0">
                    <div class="col-12 p-2">
                        <h3>Auteur</h3>
                        <ul class="d-flex flex-wrap p-0 pl-3 m-0">
                            <div class="d-flex px-3 p-2">
                                <input type="checkbox" class="form-check-input" id="exampleCheck1">
                                <label class="form-check-label" for="exampleCheck1">Auteur 1</label>
                            </div>
                            <div class="d-flex px-3  p-2">
                                <input type="checkbox" class="form-check-input" id="exampleCheck1">
                                <label class="form-check-label" for="exampleCheck1">Auteur 2</label>
                            </div>
                            <div class="d-flex px-3 p-2">
                                <input type="checkbox" class="form-check-input" id="exampleCheck1">
                                <label class="form-check-label" for="exampleCheck1">Auteur 3</label>
                            </div>
                            <div class="d-flex px-3 p-2">
                                <input type="checkbox" class="form-check-input" id="exampleCheck1">
                                <label class="form-check-label" for="exampleCheck1">Auteur 4</label>
                            </div>
                            <div class="d-flex px-3 p-2">
                                <input type="checkbox" class="form-check-input" id="exampleCheck1">
                                <label class="form-check-label" for="exampleCheck1">Auteur 5</label>
                            </div>
                            <div class="d-flex px-3 p-2">
                                <input type="checkbox" class="form-check-input" id="exampleCheck1">
                                <label class="form-check-label" for="exampleCheck1">Auteur6</label>
                            </div>
                            <div class="d-flex px-3 p-2">
                                <input type="checkbox" class="form-check-input" id="exampleCheck1">
                                <label class="form-check-label" for="exampleCheck1">Auteur 7</label>
                            </div>
                            <div class="d-flex px-3 p-2">
                                <input type="checkbox" class="form-check-input" id="exampleCheck1">
                                <label class="form-check-label" for="exampleCheck1">Auteur 8</label>
                            </div>
                        </ul>
                    </div>
                </div>
                <div class="row p-0 m-0">
                    <div class="col-12 p-2">
                        <h3>Genre</h3>
                        <ul class="d-flex flex-wrap p-0 pl-3 m-0">
                            <div class="d-flex px-3 p-2">
                                <input type="checkbox" class="form-check-input" id="exampleCheck1">
                                <label class="form-check-label" for="exampleCheck1">Genre 1</label>
                            </div>
                            <div class="d-flex px-3  p-2">
                                <input type="checkbox" class="form-check-input" id="exampleCheck1">
                                <label class="form-check-label" for="exampleCheck1">Genre 2</label>
                            </div>
                            <div class="d-flex px-3 p-2">
                                <input type="checkbox" class="form-check-input" id="exampleCheck1">
                                <label class="form-check-label" for="exampleCheck1">Genre 3</label>
                            </div>
                            <div class="d-flex px-3 p-2">
                                <input type="checkbox" class="form-check-input" id="exampleCheck1">
                                <label class="form-check-label" for="exampleCheck1">Genre 4</label>
                            </div>
                            <div class="d-flex px-3 p-2">
                                <input type="checkbox" class="form-check-input" id="exampleCheck1">
                                <label class="form-check-label" for="exampleCheck1">Genre 5</label>
                            </div>
                            <div class="d-flex px-3 p-2">
                                <input type="checkbox" class="form-check-input" id="exampleCheck1">
                                <label class="form-check-label" for="exampleCheck1">Genre 6</label>
                            </div>
                            <div class="d-flex px-3 p-2">
                                <input type="checkbox" class="form-check-input" id="exampleCheck1">
                                <label class="form-check-label" for="exampleCheck1">Genre 7</label>
                            </div>
                            <div class="d-flex px-3 p-2">
                                <input type="checkbox" class="form-check-input" id="exampleCheck1">
                                <label class="form-check-label" for="exampleCheck1">Genre 8</label>
                            </div>
                        </ul>
                    </div>
                </div>
                <div class="row p-0 m-0">
                    <div class="price col-12 p-2">
                        <h3>Prix</h3>
                        <div id="price-slider">
                        </div>
                    </div>
                </div>
                <div class="row p-0 m-0">
                    <div class="col-12 d-flex justify-content-center align-items-center p-3">
                        <button type="submit" class="btn btn-info mb-2">Appliquer les filtres</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-8">
            <div class="row" id="sort">
                <div class="col-6 d-flex align-items-center">
                    <p class="m-0"><span>12</span> Livres trouvés</p>
                </div>
                <div class="col-6 d-flex justify-content-end align-items-center">
                    <label for="sort-select" class="m-0 p-2">Trier par : </label>
                    <select class="custom-select" name="sort-select" id="sort-select">
                        <option value="up-price">Prix croissant</option>
                        <option value="down-price">Prix décroissant</option>
                        <option value="up-name">Nom croissant</option>
                        <option value="down-name">Nom décroissant</option>
                    </select>
                </div>
            </div>
            <div class="row">
                <div class="col-12 d-flex flex-wrap">
                    <div class="m-0 p-3">
                        <div class="book-card">
                            <div class="photo">
                                <img src="build/static/livre1.png" alt="image du livre">
                                <div class="overlay">
                                    <a href="/detail/{{id}}"><button class="btn btn-info p-3">Details</button></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}